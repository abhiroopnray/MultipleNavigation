<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.wallet.WalletFragment"
    android:paddingBottom="@dimen/margin_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/margin_20">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_5"
            android:text="Balance" 
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_5"
            android:textColor="@android:color/white"
            android:text="50" />

        <Button
            android:id="@+id/btn_add_cash"
            android:layout_width="@dimen/size_100"
            android:layout_height="40dp"
            android:layout_margin="@dimen/margin_10"
            android:layout_weight="1"
            android:background="@color/color_green"
            android:text="@string/add_cash"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_60"
            android:padding="@dimen/margin_20">

            <ImageView
                android:id="@+id/iv_token"
                android:layout_width="@dimen/size_60"
                android:layout_height="@dimen/size_60"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:text="Token"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/white"
                android:text="4" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_60"
            android:padding="@dimen/margin_20">

            <ImageView
                android:id="@+id/iv_deposit"
                android:layout_width="@dimen/size_60"
                android:layout_height="@dimen/size_60"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Deposit"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="500"
                android:textColor="@android:color/white"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_60"
            android:padding="@dimen/margin_20">

            <ImageView
                android:id="@+id/iv_bonus"
                android:layout_width="@dimen/size_60"
                android:layout_height="@dimen/size_60"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Bonus"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="100"
                android:textColor="@android:color/white"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_60"
            android:padding="@dimen/margin_20">

            <ImageView
                android:id="@+id/iv_withdraw"
                android:layout_width="@dimen/size_60"
                android:layout_height="@dimen/size_60"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Winning"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/white"
                android:text="150" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@android:color/darker_gray" />
<TextView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="@string/wallet_info"
    android:layout_marginTop="@dimen/margin_50"
    android:paddingStart="@dimen/margin_20"
    android:paddingEnd="@dimen/margin_20"
    android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/btn_withdraw_cash"
            android:layout_width="@dimen/size_150"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/margin_50"
            android:layout_weight="1"
            android:background="@color/text_light_grey"
            android:text="@string/wihdraw_cash"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </LinearLayout>

</ScrollView>