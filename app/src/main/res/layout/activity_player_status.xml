<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PlayerStatusActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_toolbar" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_player_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_10"
        android:paddingStart="@dimen/margin_20"
        android:paddingBottom="@dimen/margin_10"
        android:paddingEnd="@dimen/size_50"
        app:layout_constraintHorizontal_weight="1"
        android:background="@color/indian_jersey_green">

        <TextView
            android:id="@+id/tv_player_name"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:text="Player's Name"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_credits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_player_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.356"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/tv_player_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/layout_player_selection"
        android:id="@+id/recycler_view"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>



</RelativeLayout>