<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_10"
    tools:context=".fragment.mymatches.MyMatchesFragment">

    <ImageView
        android:id="@+id/iv_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/btn_circle_selected"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_tournament_joined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/tournaments_joined"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/iv_dot"
        app:layout_constraintTop_toTopOf="@+id/iv_dot" />

    <TextView
        android:id="@+id/tv_tournament_joined_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_25"
        android:text="16"
        android:textColor="@android:color/white"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_tournament_joined"
        app:layout_constraintStart_toEndOf="@+id/tv_tournament_joined" />

    <ImageView
        android:id="@+id/iv_dot2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_circle_selected"
        app:layout_constraintStart_toStartOf="@+id/iv_dot"
        app:layout_constraintTop_toBottomOf="@+id/iv_dot" />

    <TextView
        android:id="@+id/tv_tournament_wins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="@string/tournaments_wins"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/iv_dot2"
        app:layout_constraintTop_toTopOf="@+id/iv_dot2" />

    <TextView
        android:id="@+id/tv_tournament_win_value"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="52dp"
        android:text="16"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/tv_tournament_wins"
        app:layout_constraintTop_toBottomOf="@+id/tv_tournament_joined_number" />

    <ImageView
        android:id="@+id/iv_dot3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_circle_selected"
        app:layout_constraintStart_toStartOf="@+id/iv_dot2"
        app:layout_constraintTop_toBottomOf="@+id/iv_dot2" />

    <TextView
        android:id="@+id/tv_tournament_wins_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="@string/tournaments_wins"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/iv_dot3"
        app:layout_constraintTop_toTopOf="@+id/iv_dot3" />

    <TextView
        android:id="@+id/tv_tournament_win_percentage_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="124dp"
        android:text="16"
        android:textColor="@android:color/white"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_tournament_wins_percentage"
        app:layout_constraintStart_toEndOf="@+id/tv_tournament_wins_percentage"
        app:layout_constraintTop_toBottomOf="@+id/tv_tournament_joined_number" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_300"
        android:layout_marginTop="@dimen/size_80"
        app:layout_constraintTop_toBottomOf="@+id/tv_tournament_win_percentage_value"/>

</androidx.constraintlayout.widget.ConstraintLayout>