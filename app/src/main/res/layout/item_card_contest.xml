<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_5">
    <!-- A CardView that contains a TextView -->
    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_200"
        android:layout_gravity="center"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/determinateBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="@dimen/size_300"
                android:layout_height="@dimen/margin_10"
                android:progress="66"
                android:layout_below="@+id/top_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_25"/>

            <TextView
                android:id="@+id/tv_no_of_captains"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/determinateBar"
                android:layout_marginTop="@dimen/margin_10"
                android:textSize="@dimen/margin_15"
                android:gravity="center_horizontal"
                android:text="No of participating captains: 40/60"/>

            <RelativeLayout
                android:id="@+id/top_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_30"
                android:layout_alignParentTop="true"
                android:background="@color/indian_jersey_saffron"
                android:gravity="center">

                <TextView
                    android:id="@+id/top_info_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/margin_10"
                    android:gravity="left|center_horizontal"
                    android:textSize="@dimen/margin_15"
                    android:text="(X()" />

                <TextView
                    android:id="@+id/top_info_contest_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:gravity="right|center_horizontal"
                    android:textSize="@dimen/margin_15"
                    android:text="(C) (M)"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/margin_10"
                android:orientation="vertical"
                android:layout_above="@+id/layout_btns">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_btns"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_60"
                android:layout_above="@+id/bottom_layout"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:weightSum="3">

                <Button
                    android:id="@+id/btn_create_team"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/margin_10"
                    android:background="@drawable/button_style"
                    android:text="@string/show_team"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btn_join"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="@dimen/margin_10"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:text="@string/join_tournament"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btn_winning_breakup"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="@dimen/margin_10"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:text="@string/winning_breakuo"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white" />

            </LinearLayout>
           <RelativeLayout
               android:id="@+id/bottom_layout"
               android:layout_width="match_parent"
               android:layout_height="@dimen/size_30"
               android:layout_alignParentBottom="true"
               android:paddingStart="@dimen/margin_10"
               android:paddingEnd="@dimen/margin_10"
               android:background="@color/indian_jersey_saffron">
            <TextView
                android:id="@+id/bottom_info_text1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_40"
                android:paddingStart="@dimen/margin_10"
                android:layout_alignParentStart="true"
                android:gravity="left|center"
                android:textSize="@dimen/margin_15"
                android:text="Entry fee Rs 12" />
            <TextView
                android:id="@+id/bottom_info_text"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_40"
                android:paddingStart="@dimen/margin_10"
                android:gravity="left|center"
                android:textSize="@dimen/margin_15"
                android:layout_alignParentEnd="true"
                android:text="Winning amount Rs 600" />
           </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
