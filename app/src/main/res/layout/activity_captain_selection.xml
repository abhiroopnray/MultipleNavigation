<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/indian_jersey_blue"
        android:padding="@dimen/margin_10"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/margin_100"
            android:layout_height="@dimen/margin_50"
            android:src="@drawable/ic_launcher_foreground"/>

        <TextView
            android:id="@+id/tv_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/size_200"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:background="@drawable/button_style"
            android:textColor="@android:color/white"
            android:text="Cap VC"
            android:padding="@dimen/margin_5"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_captain_selection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5"
        android:paddingStart="@dimen/margin_20"
        android:paddingEnd="@dimen/margin_20"
        android:visibility="visible"
        android:layout_above="@+id/layout_bottom"
        android:layout_below="@+id/layout_top">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/margin_10"
        android:gravity="center_horizontal"
        android:background="@color/indian_jersey_blue">

        <Button
            android:id="@+id/btn_show_team_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abcd"
            android:layout_weight="1"
            android:lines="2"
            android:layout_marginEnd="@dimen/margin_10"
            android:background="@color/indian_jersey_blue_old"
            android:textAllCaps="false"/>


        <Button
            android:id="@+id/btn_create_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_team"
            android:layout_weight="1"
            android:lines="2"
            android:layout_marginStart="@dimen/margin_10"
            android:background="@color/indian_jersey_blue_old"
            android:textAllCaps="false"/>
    </LinearLayout>

</RelativeLayout>